#include <stdio.h>

int* mergeSort(int* arr, int s, int e){


	int m = (e-s)/2 + s; // mid
	//printf("%d %d %d\n",  s, m, e);
	if(e - s <= 1){
		if(arr[e] < arr[s]){
			int temp = arr[e];
			arr[e] = arr[s];
			arr[s] = temp;
		}
		merge(arr, s, e);
		return;
	}	

	mergeSort(arr, s, m);
	mergeSort(arr, m+1, e);
	merge(arr, s, e);
	
	
}

