		if(arr[i] < arr[j]){


		}
	}
	*/
}

int main(){
	
	int a[8] = {3,14,6,1,9,3,8,4};
	int len = sizeof(a) / sizeof(*a);

	mergeSort(a, 0, len-1);

	return 0;

}
